<!DOCTYPE html>

<head>
    <html lang="ja">
    <meta charset="utf-8">
    <link href="/css/normalize.css">
    <title>Stitches</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <script src="/js/Dfolder/jquery-3.1.1.min.js"></script>
    <script async defer src="/js/Dfolder/jquery_program.js"></script>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="/css/animation.css">
    <script async defer src="/js/Kfolder/common.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- <script src="http://code.jquery.com/jquery.js"></script> -->
    <script async defer src="/js/Dfolder/bootstrap.min.js"></script>
    <script async defer src="/js/Kfolder/common.js"></script>
    <script async defer src="/js/Kfolder/output_js/contact.js"></script>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
                <a class="navbar-brand" href="/">Stitches</a>
            </div>
            <div class="collapse navbar-collapse target">
                <ul class="nav navbar-nav">
                    <li><a href="/">トップ</a></li>
                    <% if(login != "マイページ"){ %>
                        <li><a href="/register">新規登録</a></li>
                        <% } %>
                            <li class="active">
                                <a href="/mypage">
                                    <%= login %>
                                </a>
                            </li>
                            <li><a href="/question_board_top">質問広場</a></li>
                            <li><a href="/contact">問い合わせ</a></li>
                            <% if(login == "マイページ"){ %>
                                <li><a href="/logout">ログアウト</a></li>
                                <% } %>
                </ul>
                <p class="navbar-text navbar-right nav-padding">ようこそ
                    <a href="/mypage" class="navbar-link">
                        <%= userName %>
                    </a> さん</p>
            </div>
        </nav>
    </header>
    <div class="top_space_nav"></div>
    <img class="contact_header_img" width="1200px" height="600px" src="/img/header_footer.jpg" alt="header_img" />
    <div class="login_form">
        <h1>ログイン</h1>
        <form action="/login_check" method="post">
            <table>
                <tr>
                    <td><input type="text" name="id" id="id" placeholder="ユーザIDまたはメールアドレス"></td>
                    <td></td>
                </tr>
                <tr>
                    <td><input type="password" name="password" placeholder="パスワードを入力してください"></td>
                    <td></td>
                </tr>
                <tr>
                    <td><input type="submit" value="ログイン"></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="pd0">
                        <p><a href="/password_reset">パスワードリセット</a></p>
                    </td>
                </tr>
            </table>

            <input id="token" type="hidden" name="_csrf" value="<%= reqCsrf %>">
            <!-- csrfToken -->
            <input id="Error_status" type="hidden" name="Error_status" value="<%= error %>">
        </form>



    </div>
</body>

</html>

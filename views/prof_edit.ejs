<div class="register_table">
  <form action="/register_submit" method="post" onsubmit="return conrimMessage();">
        <h1>ユーザ情報の変更</h1>
  <table>
    <tr>
      <td><p>ユーザーネーム</p></td>
      <td><input type="text" name="user_name" id="id" placeholder="ユーザネーム" required aria-required="true" value="<%= data.name %>"></td>
    </tr>
    <tr>
      <td><p>年齢</p></td>
      <td>
        <select name="year" required aria-required="true">
        <option value="" selected>年代</option>
        <option value="10代">10代</option>
        <option value="20代">20代</option>
        <option value="30代">30代</option>
        <option value="40代">40代</option>
        <option value="50代">50代</option>
        <option value="60代">60代</option>
        </select>
      </td>
    </tr>
    <tr>
      <td><p>職業</p></td>
      <td><input type="text" name="user_job" id="id" placeholder="職業" value="<%= data.work %>"></td>
    </tr>
    <tr>
      <td><p>得意な言語</p></td>
      <td><input type="text" name="user_language" id="id" placeholder="言語名" value="<%= data.uf_pl %>"></td>
    </tr>
  </table>
  <div class="register_input">
    <input type="hidden" name="edit" value="edit">
    <input type="submit" value="変更">
    <input type="reset" value="リセット">
    <input id="token" type="hidden" name="_csrf" value="<%= reqCsrf %>"><!-- csrfToken -->
  </div>
    <p class="center-text"><a href="/prof_change">プロフィール画像の変更</a></p>
  <input id="Error_status" type="hidden" name="Error_status" value="<%= error %>">
  </form>
</div>
